{
  "name": "sdf-deploy-xml",
  "displayName": "SDF Deploy XML",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.createResetDeploy",
        "title": "SDF Deploy XML: Reset deploy.xml"
      },
      {
        "command": "extension.addFileToDeploy",
        "title": "SDF Deploy XML: Add current file to deploy.xml"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.addFileToDeploy",
          "group": "z_commands@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.createResetDeploy",
        "key": "ctrl+; shift+-",
        "mac": "cmd+; shift+-"
      },
      {
        "command": "extension.addFileToDeploy",
        "key": "ctrl+; shift+=",
        "mac": "cmd+; shift+="
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/xml2js": "^0.4.14",
    "xml2js": "^0.6.2"
  }
}